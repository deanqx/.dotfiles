set $mod Mod4
set $alt Mod1

font pango:JetBrainsMono Nerd Font Mono 8

exec_always --no-startup-id ~/.config/i3/autotiling
exec_always --no-startup-id ~/.xprofile
exec --no-startup-id ~/.startup.sh

bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ && $refresh_i3status
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && $refresh_i3status
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshots
bindsym Print exec maim --hidecursor --select "/home/$USER/Pictures/screenshots/$(date +"%Y-%m-%d_%Hh%Mm%Ss").png"
bindsym Shift+Print exec maim --hidecursor "/home/$USER/Pictures/screenshots/$(date +"%Y-%m-%d_%Hh%Mm%Ss").png"

# Clipboard Screenshots
bindsym Ctrl+Print exec maim --hidecursor --select | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec maim --hidecursor | xclip -selection clipboard -t image/png

# Switch audio device
bindsym $mod+Shift+a exec --no-startup-id wpctl set-default $(wpctl status | sed -n 's/ â”‚\s*\([0-9]\+\).*Analog Stereo.*/\1/p' | head -n 1)

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
# tiling_drag modifier titlebar

bindsym $mod+Return exec "alacritty"
bindsym $mod+q kill
bindsym $mod+d exec "rofi -show drun -modi drun,window"
bindsym $mod+f exec "nautilus"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split
# bindsym $mod+s split h
bindsym $mod+v split v
# bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# We use variables to avoid repeating the names in multiple places.
set $w1 "1:1"
set $w2 "3:2"
set $w3 "5:3"
set $w4 "7:4"
set $w5 "9:5"
set $wa1 "2:~1"
set $wa2 "4:~2"
set $wa3 "6:~3"
set $wa4 "8:~4"
set $wa5 "10:~5"

assign [class="firefox"] $w1
assign [class="Signal"] $wa4
assign [class="Spotify"] $wa5

workspace $w1 output DP-4
workspace $wa4 output DP-0
workspace $wa5 output DP-0

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $alt+1 workspace $wa1
bindsym $alt+2 workspace $wa2
bindsym $alt+3 workspace $wa3
bindsym $alt+4 workspace $wa4
bindsym $alt+5 workspace $wa5

# move focused container to workspace
bindsym $mod+Control+1 move container to workspace $w1
bindsym $mod+Control+2 move container to workspace $w2
bindsym $mod+Control+3 move container to workspace $w3
bindsym $mod+Control+4 move container to workspace $w4
bindsym $mod+Control+5 move container to workspace $w5
bindsym $alt+Control+1 move container to workspace $wa1
bindsym $alt+Control+2 move container to workspace $wa2
bindsym $alt+Control+3 move container to workspace $wa3
bindsym $alt+Control+4 move container to workspace $wa4
bindsym $alt+Control+5 move container to workspace $wa5

# move focused container to workspace and switch
bindsym $mod+Shift+1 move container to workspace $w1; workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2; workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3; workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4; workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5; workspace $w5
bindsym $alt+Shift+1 move container to workspace $wa1; workspace $wa1
bindsym $alt+Shift+2 move container to workspace $wa2; workspace $wa2
bindsym $alt+Shift+3 move container to workspace $wa3; workspace $wa3
bindsym $alt+Shift+4 move container to workspace $wa4; workspace $wa4
bindsym $alt+Shift+5 move container to workspace $wa5; workspace $wa5

bindsym $mod+s move workspace to output right

# reload the configuration file
bindsym $mod+Shift+c reload
# restart 83 (not sway) inplace
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+r mode "resize"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym comma resize grow width 10 px or 10 ppt
        bindsym period resize shrink width 10 px or 10 ppt
        bindsym plus resize grow height 10 px or 10 ppt
        bindsym minus resize shrink height 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

